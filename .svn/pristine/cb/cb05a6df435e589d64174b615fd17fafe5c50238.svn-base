@import '../assets/style/local.less';

.home{
	padding-bottom: 50px;
	header {
		padding: 10*@fontSize 20*@fontSize;
		background: linear-gradient(180deg, #F94230 0%, #F94230 100%);

		.logo {
			width: 76 * @fontSize;
			height: 76*@fontSize;

			img {
				width: 100%;
			}
		}

		.search {
			width: 100%;
		}

		// 解決垂直邊界重合問題
		&::before {
			display: table;
			content: '';
		}
	}

	.banner {
		height: 0;
		padding: 20*@fontSize;
		padding-bottom: 37%;

		img {
			width: 100%;
		}
	}

	.ad {
		//height: 0;
		//padding: 20*@fontSize;
		padding-bottom: 26.4%;
	}

	.grid {
		margin-top: @baseMargin;
	}

	.day-fruit {
		padding: 0 20*@fontSize;
		//padding-top: 0;

		.fruit-container {
			padding: 20*@fontSize;
			background: #fff;
			border-radius: 10px;

			.fruit-top {
				.title {
					font-weight: bold;
					font-size: 32*@fontSize;
				}

				img {
					width: 10 * @fontSize;
					margin-right: 20 * @fontSize;
				}

				.more {
					color: #aaa;
					font-size: 20*@fontSize;
				}
			}
		}

		.fruit-content {
			margin-top: @baseMargin;

			> div {
				width: 25%;
				text-align: center;

				img {
					width: 140*@fontSize
				}

				.price-content {
					margin-top: 10*@fontSize;
					padding: 0 2px;
				}

				.volume {
					color: #F60A30;
					font-weight: bold;
					font-size: 28*@fontSize;
				}

				.price {
					font-size: 18*@fontSize;
					opacity: 0.3;
				}
			}
		}

		.homier-content {
			flex-wrap: wrap;

			> div {
				width: 33%;
				margin-top: @baseMargin;

				img {
					width: 210*@fontSize;
					height: 150*@fontSize;
				}

				.volume {

					font-size: 32*@fontSize;
				}

				.price {
					font-size: 24*@fontSize;
				}
			}
		}
	}
}
.list {
	padding: 20 * @fontSize;

	.item {
		align-items: flex-start;
		margin-top: 20 * @fontSize;
		// height: 300 * @fontSize;
		// width: 100%;
		padding: 20 * @fontSize;
		font-size: 24 * @fontSize;
		background: #fff;
		border-radius: 5px;

		&-left {
			width: 36%;
			// width: 260 * @fontSize;
			// height: 260 * @fontSize;

			img {
				// height: 100%;
				width: 100%;
			}
		}

		&-right {
			width: 64%;
			margin-left: 10 * @fontSize;
			font-weight: 400;
			font-size: 24 * @fontSize;
			line-height: 40 * @fontSize;

			.goods-title {
				width: 100%;
				word-break: break-all;
			}

			.shop-title,
			.volume {
				color: #999;
				// &:before {
				//     content: '￥';
				//     display: inline-block;
				//     font-size: 24 * @fontSize;
				// }
			}

			.volume{
				text-decoration: line-through;
			}

			.return-power {
				margin-top: 15 * @fontSize;
				color: #f00;
			}

			.price-content {
				align-items: flex-end;
				margin-top: 30 * @fontSize;

				.price {
					margin-left: 5px;
					color: #ef0401;
					font-weight: bold;
					font-size: 32 * @fontSize;

					&::before {
						display: inline-block;
						font-size: 24 * @fontSize;
						content: '￥';
					}
				}
			}

			.go-buy {
				float: right;
				width: 150 * @fontSize;
				height: 60 * @fontSize;
				color: #fff;
				line-height: 60 * @fontSize;
				text-align: center;
				background: linear-gradient(90deg, #fc346e 0%, #fb0201 100%);
				border-radius: 5px;
			}
		}
	}
}