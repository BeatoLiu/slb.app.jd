@import '../../assets/style/local.less';
.product-submit {
	.contact {
		padding: @basePadding;
		background: #fff;
		p {
			margin-top: 10 * @fontSize;
		}
		.detail-address {
			font-weight: bold;
			font-size: 16px;
		}
		.da-mobile {
			margin-left: @baseMargin;
		}
	}
	.line {
		background: #fff;
		width: 100%;

		img {
			width: 100%;
		}
	}
	.goods-info {
		padding: @basePadding;
		background: #fff;
		.goods-img {
			width: 300 * @fontSize;
			img {
				width: 100%;
			}
		}
		.goods-price {
			color: #f44336;
			font-size: 18px;
			&::before {
				display: inline-block;
				font-size: 14px;
				content: 'ï¿¥';
			}
		}
	}
	.other-fee {
		margin-top: @baseMargin;
		padding: @basePadding;
		background: #fff;
		div {
			margin-top: @baseMargin;
		}

		.total-fee {
			padding-top: @basePadding;
			text-align: right;
			border-top: 1px solid #eee;

			span {
				color: #f44336;
			}
		}
	}

	.invoice-content {
		margin-top: @baseMargin;
		background: #fff;
	}
}
